@model IEnumerable<CPRG214.MVC.AssetTracking.Models.AssetViewModel>
@{
    ViewData["Title"] = "View";
}

<div class="text-center">
    <table id="assetTable" class="table col-12">
        <thead>
            <tr>
                <th class="col-1"></th>
                <th class="col-2">@Html.DisplayNameFor(model => model.TagNumber)</th>
                <th class="col-4">@Html.DisplayNameFor(model => model.Description)</th>
                <th class="col-2">@Html.DisplayNameFor(model => model.AssetType)</th>
                <th class="col-2">@Html.DisplayNameFor(model => model.SerialNumber)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="col-1">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </td>
                <td class="col-2">@Html.DisplayFor(modelItem => item.TagNumber)</td>
                <td class="col-5">@Html.DisplayFor(modelItem => item.Description)</td>
                <td class="col-2">@Html.DisplayFor(modelItem => item.AssetType)</td>
                <td class="col-2">@Html.DisplayFor(modelItem => item.SerialNumber)</td>
            </tr>
            }
        </tbody>
    </table>
</div>
